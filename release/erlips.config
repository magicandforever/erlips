{sys, 
    [
    {lib_dirs,["/home/litao/erlang"]},
    {boot_rel, "erlips"}, 
    {rel, "erlips", "0.1", [kernel, stdlib, sasl, erlips]},
    {relocatable, true},
    %{profile, standalone},
    {profile, embedded},
    {app_file, keep},
    {debug_info, strip},
    {incl_cond, exclude},
    {incl_app_filters, ["^ebin", "^etc", "^priv", "^include"]},
    {excl_archive_filters,["^include","^priv"]},

    {app, kernel, [{incl_cond, include}]},
    {app, stdlib, [{incl_cond, include}]},
    {app, sasl, [{incl_cond, include}]},
    {app, erlips, [{incl_cond, include}, 
                    {incl_app_filters, [".*"]},
                    {excl_app_filters, ["^release"]}]},
    {app, runtime_tools, [{incl_cond, include}]}
    ]
}.
